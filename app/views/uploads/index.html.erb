<div id="content">
	<%= form_for @upload, html: { multipart: true, class: "dropzone", id: "my-dropzone"}  do |f| %>
	<div class="dz-message needsclick">
		<h3>Drop file here</h3> or
		<strong>Click</strong> To Upload
	</div>	
	<div class="fallback">
		<%= f.file_field :image %>
		<%= f.submit "Upload Image" %>
	</div>
	<% end %>
</div>